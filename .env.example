# ===================================================================
# LogHeal Environment Configuration Example
# Copy this file to .env and fill in your actual values
# ===================================================================

# === REQUIRED ===
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# === Elasticsearch Configuration ===
# Connection to Elasticsearch/ELK stack
ELK_HOST=localhost
ELK_PORT=9200
ELK_USERNAME=elastic
ELK_PASSWORD=changeme
ELK_USE_MOCK=false
ELK_INDEX_PATTERN=logs-*
ELK_TIME_RANGE_MINUTES=180

# === OpenAI Configuration ===
OPENAI_MODEL=gpt-4o

# === Git Configuration ===
GIT_REPO_PATH=.
GIT_DEFAULT_BRANCH=main
GIT_BRANCH_PREFIX=fix/
GIT_AUTHOR_NAME=LogHeal Bot
GIT_AUTHOR_EMAIL=logheal@bot.local

# === Application Configuration ===
APP_ENV=production
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_PORT=8501
APP_TIMEOUT_SECONDS=300

# === Caching Configuration ===
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# === Security Configuration ===
MAX_RETRIES=3
RATE_LIMIT_CALLS=10
RATE_LIMIT_PERIOD_SECONDS=60
